!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Bowersian
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag 'https://fonts.googleapis.com/icon?family=Material+Icons'
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = auto_discovery_link_tag :atom, articles_path
    = csrf_meta_tags
  %body{ class: [ controller_name, action_name ] }
    %header#site-header
      %h1= link_to 'Bowersian', root_path
      %nav
        - if user_signed_in?
          .hint--info.hint--bottom.hint--bounce.hint--rounded{data: { hint: 'New article' }}= link_to 'add', new_article_path, class: 'material-icons md-light md-2em'
          .hint--info.hint--bottom.hint--bounce.hint--rounded{data: { hint: 'Log out' }}= link_to 'lock_open', destroy_user_session_path, method: :delete, class: 'material-icons md-light md-2em'
          .hint--info.hint--bottom.hint--bounce.hint--rounded{data: { hint: current_user.email }}
            .material-icons.md-light.md-2em person
        - else
          .hint--info.hint--bottom.hint--bounce.hint--rounded{data: { hint: 'Log in' }}= link_to 'lock', new_user_session_path, class: 'material-icons md-light md-2em'
    %main
      = yield
      %footer#notifications
        - flash.each do |key, value|
          %div{ class: key }= value
